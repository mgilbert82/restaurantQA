<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Restaurant Quai Antique
			{% endblock %}
		</title>
		<!-- Bootstrap core CSS -->
		<link rel="stylesheet" href="{{ asset('assets/style/bootstrap.min.css')}}">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		<link
		rel="stylesheet" href="{{ asset('assets/style/main.css') }}">
		<!-- Custom styles for this template -->
		<link href="{{ asset('assets/style/carousel.css')}}" rel="stylesheet">
	</head>
	<body>
		{% include "includes/header.html.twig" %}
		{% block body %}
			<main role="main">
				{% if block('carousel') is defined %}
					<div id="myCarousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							{% for key, carousel in carousels %}
								<li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %}></li>
							{% endfor %}
						</ol>
						<div class="carousel-inner">
							{% for key, carousel in carousels %}
								<div class="carousel-item {% if key == 0 %} active {% endif %}" style="background:linear-gradient(0deg, rgba(0,0,0,0.7105435924369747) 0%, rgba(255,255,255,0) 100%), url('uploads/carousel-image/{{ carousel.url }}'); background-size: cover; background-position:center; height:400px;">
									<div class="container">
										<div class="carousel-caption text-right" id="carouselText">
											<h1>{{ carousel.name }}</h1>
											<hr class="h-25 w-50 float-right bg-light">
										</div>
									</div>
								</div>
							{% endfor %}
							<a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
						<div id="reservationBtnContainer" class="btn">
							<a href="#" role="button">
								<div id="reservationBtn">
									RÃ©server une table
								</div>
							</a>
						</div>
					</div>
				{% endif %}
				<div
					class="container marketing {% if block('carousel') is not defined %}mt-5{% endif %}
																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																														">
					<!-- Three columns of text below the carousel -->

					{% block content %}{% endblock %}
				</div>
			</main>
		{% endblock %}
		{% include "includes/footer.html.twig" %}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		<script src="{{ asset('assets/js/bootstrap.bundle.js')}}"></script>
		<script src="assets/js/main.js"></script>
	</body>
</html>
